<!DOCTYPE html>
<html data-theme="light">
<head>
    <title>{% block title %}{% endblock %}</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ '/assets/tufte/tufte.min.css' | url }}"/>
    <script>
        (function(){
            try {
                var t = localStorage.getItem('theme') || (matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
                document.documentElement.dataset.theme = t;
            } catch(e){}
        })();
    </script>
    <style>
        /* --- Global Layout --- */
        html { font-size: 16px; -webkit-font-smoothing: antialiased; }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
            line-height: 1.5;
            color: #e2e2e2;
            background-color: #0b0c10;
            max-width: 130ch; /* Optimal measure for reading */
            margin: 0 auto !important;
            padding: 0 5%; 
            transition: background-color 0.4s ease;
        }

        /* --- Natural Typography Hierarchy --- */
        h1, h2, h3 {
            color: #ffffff;
            font-weight: 600;
            letter-spacing: -0.01em;
            margin-top: 3rem;
            border-bottom: none !important;
        }

        h1 { font-size: 2rem; margin-bottom: 2rem; }
        h2 { font-size: 1.5rem; margin-bottom: 1rem; }

        .content-layer a {
            text-decoration: none;
            color: #ff9d7d;
            background: none !important;
            text-shadow: none !important;
        }

        .light-mode .content-layer a { color: #0056b3; }
        .content-layer a:hover { text-decoration: underline; }

        /* --- Module Leaders --- */
        .group-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .student-entry { display: flex; flex-direction: column; gap: 8px; }
        .student-photo {
            height: 180px; width: 160px;
            object-fit: cover;
            border-radius: 4px;
        }

        /* --- Footer --- */
        .site-footer {
            margin-top: 6rem;
            padding: 2rem 0 4rem 0;
            width: 100%;
        }

        .footer-container {
            border-top: 1px solid #444;
            padding-top: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            opacity: 0.5;
            font-size: 0.85rem;
        }

        .light-mode .footer-container { border-top: 1px solid #ccc; }
        .footer-links { display: flex; gap: 20px; }
        .footer-links a { color: inherit !important; text-decoration: none; }

        #theme-toggle {
            position: fixed; top: 20px; right: 20px; z-index: 100;
            background: #444; color: #fff; border: none;
            border-radius: 50%; width: 45px; height: 45px; cursor: pointer;
        }

        body.light-mode { background-color: #f7f7f8; color: #333; }
        body.light-mode h1, body.light-mode h2, body.light-mode h3 { color: #000; }

        @media (max-width: 768px) {
            body { padding: 0 1.5rem; }
            .footer-container { flex-direction: column; text-align: center; gap: 1rem; }
        }
    </style>
</head>
<body>
    <button id="theme-toggle">‚òÄÔ∏è</button>
    <main class="content-layer">
        {% block content %}{% endblock %}
    </main>

    <footer class="site-footer">
        <div class="footer-container">
            <div>¬© 2026 Cambridge Computer Vision Courses</div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const applyTheme = (t) => {
                if (t === 'light') {
                    document.body.classList.add('light-mode');
                    themeToggle.textContent = 'üåô';
                } else {
                    document.body.classList.remove('light-mode');
                    themeToggle.textContent = '‚òÄÔ∏è';
                }
            };
            themeToggle.addEventListener('click', () => {
                const n = document.body.classList.contains('light-mode') ? 'dark' : 'light';
                localStorage.setItem('theme', n);
                applyTheme(n);
            });
            applyTheme(localStorage.getItem('theme') || 'dark');
        });
    </script>
</body>
</html>