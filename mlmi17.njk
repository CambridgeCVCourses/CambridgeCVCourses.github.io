    .section-header td {
        background-color: rgba(255, 255, 255, 0.03);
        font-weight: 500;
        font-size: 0.9rem;
        color: #aaa;
        padding: 10px 15px; [cite: 10]
        border-bottom: 1px solid #444;
    }

    .light-mode .section-header td {
        background-color: rgba(0, 0, 0, 0.03);
        color: #666;
